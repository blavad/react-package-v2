{
	"name": "@blavad/react-package",
	"version": "0.0.3",
	"private": false,
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/react-package.umd.cjs",
	"module": "./dist/react-package.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/react-package.js",
			"require": "./dist/react-package.umd.cjs"
		}
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"build:watch": "tsc && vite build --watch --config vite.config.ts",
		"preview": "vite preview",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"@testing-library/react": "^14.2.1",
		"@types/node": "^20.11.10",
		"@types/react": "^18.2.56",
		"@types/react-dom": "^18.2.19",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"@vitejs/plugin-react": "^4.2.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"jsdom": "^24.0.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.2.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^5.3.3",
		"vite": "^5.0.12",
		"vite-plugin-dts": "^3.7.2",
		"vitest": "^1.2.2"
	},
	"peerDependencies": {
		"react": ">=16.0.0",
		"react-dom": ">=16.0.0"
	},
	"engines": {
		"node": ">=18.16.1"
	},
	"lint-staged": {
		"**/*.{js,ts,tsx}": [
			"eslint --fix"
		],
		"**/*": "prettier --write --ignore-unknown"
	}
}
